{
  "compilerOptions": {
    // https://v2.vuejs.org/v2/guide/typescript.html?redirect=true#Recommended-Configuration
    "target": "ES2020",
    "strict": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "dom"],
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./dist",
    "allowJs": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/js/*": ["./js/*"],
      "@/css/*": ["./css/*"],
      "@/img/*": ["./img/*"],
      "@/components/*": ["./components/*"],
      "@/backend/*": ["../src/types/*"]
    },
    "jsx": "preserve"
  }
}
